    private void ToggleStore(string section)
    {
        if (section == "food")
        {
            foodSelected = true;
            outfitSelected = false;
            foodbutton = "foodbutton active";
            outfitsbutton = "outfitsbutton";
        }
        else
        {
            outfitSelected = true;
