<PageTitle> Store </PageTitle>

<body>
    @if (LoggedIn)
    {
        <h1 class="h">Store</h1>

        <div class="coin">$</div>
        <div class="coin-label">@User.Coins</div>

        <div class="level-coin">lvl</div>
        <div class="level-label">@Pet.Level</div>

        <div class="storepagebox">
            <h3>What do you want to buy?</h3>

            <div class="choosestore">
                <span class="@foodbutton" @onclick='() => ToggleStore("food")'>Food</span>
                <span class="@outfitsbutton" @onclick='() => ToggleStore("outfit")'>Outfits</span>
            </div>

            @if (foodSelected)
            {
                <div class="storebox">
                    
                    <div style="color: white;">
                        @foreach (var item in Food)
                        {
                            <div>
                                <img src=@($"{item.Name}.png") width="50" height="50" />
                                <input type="radio" name="food" value="@item.Name" @onchange="() => SelectFood(item)" />
                                <label for="@item.Name">@item.Name</label>
                                <input type="number" @bind="UserInventoryService.GetInventoryItem(User.Id, item.Id).Quantity"/>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (outfitSelected)
            {
                <div class="storebox">
                    <div class="product-container">
                        @foreach (var item in Outfits)
                        {
                            <div class="productbox" @onclick="() => UpdateSelectedOutfit(item)">
                                <div class="product">
                                <img style="width: inherit; object-fit:cover;" src=@($"{item.Name}.png")/>
                                </div>
                                @* @if (UnlockedOutfits.Contains(item))
                                {
                                    <span style="color: gray; text-decoration: line-through;">@item.Name</span>
                                    <input type="radio" disabled />
                                }
                                else
                                {
                                    <input type="radio" name="outfits" value="@item.Name" />
                                    <label for="@item.Name">@item.Name</label>
                                } *@
                            </div>
                        }
                    </div>

                    <div>
                        @if (SelectedOutfit != null)
                        {
                            <p>Selected Outfit: </p>
                            <img style="width: 500px; object-fit:cover;" src=@($"{SelectedOutfit.Name}.png") />
                        }
                    </div>
                </div>

                
            }
        </div>

    }
    else
    {
        <h1>You must be logged in to access this page.</h1>
        <a href="login">Go to Login</a>
    }
</body>

