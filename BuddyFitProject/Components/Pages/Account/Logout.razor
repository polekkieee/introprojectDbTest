@page "/logout"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@inject NavigationManager navigationManager
@inject IHttpContextAccessor HttpContextAccessor

<head>
    <PageTitle> Logout </PageTitle>
    <link href="Logout.razor.css" rel="stylesheet" />
</head>

<body>
    <header>
        <h1>Log out</h1>
    </header>
    <main>
        <h2>You've successfully logged out.</h2>
    </main>
        
</body>

@code {
    protected override async Task OnInitializedAsync() //Logic to handle logging out
    {
        await base.OnInitializedAsync();

        var httpContext = HttpContextAccessor.HttpContext; //Retrieving the HTTP context
        
        if (httpContext?.User.Identity?.IsAuthenticated == true) //Logic to sign out user and remove coockie
        {
            await httpContext.SignOutAsync(CookieAuthenticationDefaults.AuthenticationScheme);
        }
        //Rederict to homepage after logout
        navigationManager.NavigateTo("/home", forceLoad: true);
    }
}