<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="BuddyFitProject.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script>
        function checkDivScrollEnd(divId, callbackMethodName, dotnetRef) {
            const div = document.getElementById(divId);

            div.addEventListener('scroll', function() 
            {
                if (div.scrollHeight - div.scrollTop <= div.ClientHeight + 1)
                {
                    dotnet.Ref.invokeMethodAsync(callbackMethodName);
                }
            });
        }

    </script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path switch
    {
        var x when x.StartsWithSegments("/login") => null,
        _ => InteractiveServer
    };
}
